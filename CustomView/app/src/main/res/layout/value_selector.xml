<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/value_selector_bg">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_minus"
        android:layout_width="@dimen/valueselector_imagesize"
        android:layout_height="@dimen/valueselector_imagesize"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/valueselector_margin_all"
        app:srcCompat="@drawable/minus_red" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/value_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="32dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/valueselector_margin_all"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btn_plus"
        android:layout_width="@dimen/valueselector_imagesize"
        android:layout_height="@dimen/valueselector_imagesize"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/valueselector_margin_all"
        app:srcCompat="@drawable/plus_red"/>

</LinearLayout>