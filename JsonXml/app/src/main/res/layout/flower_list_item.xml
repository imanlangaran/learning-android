<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <ImageView
        android:id="@+id/flower_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/aloe_vera" />

    <TextView
        android:id="@+id/flower_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aloe_vera"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="4dp"
        app:layout_constraintLeft_toRightOf="@id/flower_image"
        app:layout_constraintTop_toTopOf="@id/flower_image" />

    <TextView
        android:id="@+id/flower_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tessssssst"
        app:layout_constraintLeft_toLeftOf="@id/flower_name"
        app:layout_constraintTop_toBottomOf="@id/flower_name"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="#888888"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/flower_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15.99 $"
        app:layout_constraintBottom_toBottomOf="@id/flower_image"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>